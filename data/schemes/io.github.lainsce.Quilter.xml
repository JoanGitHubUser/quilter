<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="quilter" _name="Quilter" version="1.0">
  <author>Lains</author>
  <_description>Emphasis on focus.</_description>

  <style name="text"            foreground="#000" background="#FFF"/>
  <style name="cursor"          foreground="#3584e4"/>
  <style name="current-line"    background="#eff0f1"/>
  <style name="selection"       foreground="#FFF" background="#3584e4"/>
  <style name="search-match"    foreground="#000" background="#f6d32d"/>

  <!-- Bold -->
  <style name="def:strong-emphasis" bold="true"/>

  <!-- Italic -->
  <style name="def:emphasis" foreground="#555" italic="true"/>

  <!-- Links -->
  <style name="def:link-text" foreground="#000"/>
  <style name="def:link-destination" foreground="#3584e4"/>

  <!-- Code -->
  <style name="def:inline-code" background="#f6f5f4" foreground="#000"/>
  <style name="def:preformatted-section" background="#f6f5f4" foreground="#000"/>

  <!-- Line-break -->
  <style name="def:note" foreground="#000"/>

  <!-- Backslash Escaping -->
  <style name="def:special-char" foreground="#BBB"/>

  <!-- Headers -->
  <style name="def:heading" foreground="#000" bold="true"/>
</style-scheme>
