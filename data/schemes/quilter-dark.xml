<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="quilter-dark" _name="Quilter Dark" version="1.0">
  <author>Lains</author>
  <_description>Emphasis on focus.</_description>

  <style name="text"            foreground="#eff0f1" background="#232629"/>
  <style name="cursor"          foreground="#1d99f3"/>
  <style name="current-line"    background="#4D4D4D"/>
  <style name="selection"       foreground="#fcfcfc" background="#1d99f3"/>

  <!-- Bold -->
  <style name="def:statement" bold="true"/>

  <!-- Italic -->
  <style name="def:doc-comment-element" foreground="#7E8087" italic="true"/>

  <!-- Links -->
  <style name="def:comment" foreground="#1d99f3"/>
  <style name="def:underlined" foreground="#1d99f3"/>

  <!-- Code -->
  <style name="def:identifier" foreground="#7E8087"/>

  <!-- Line-break -->
  <style name="def:note" foreground="#fcfcfc"/>

  <!-- Label -->
  <style name="def:preprocessor" foreground="#eff0f1"/>

  <!-- Image marking in Links -->
  <style name="def:shebang" foreground="#1d99f3"/>
  <style name="def:constant" foreground="#1d99f3"/>

  <!-- Backslash Escaping -->
  <style name="def:special-char" foreground="#7E8087"/>

  <!-- Headers -->
  <style name="def:type" foreground="#fcfcfc" bold="true"/>
</style-scheme>
