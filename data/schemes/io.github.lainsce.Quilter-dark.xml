<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="quilter-dark" _name="Quilter Dark" version="1.0">
  <author>Lains</author>
  <_description>Emphasis on focus.</_description>

  <style name="text"            foreground="#f6f5f4" background="#111"/>
  <style name="cursor"          foreground="#62a0ea"/>
  <style name="current-line"    background="#3d3846"/>
  <style name="selection"       foreground="#111" background="#62a0ea"/>
  <style name="search-match"    foreground="#111" background="#f8e45c"/>

  <!-- Bold -->
  <style name="def:strong-emphasis" bold="true"/>

  <!-- Italic -->
  <style name="def:emphasis" foreground="#7E8087" italic="true"/>

  <!-- Links -->
  <style name="def:link-text" foreground="#CCC"/>
  <style name="def:link-destination" foreground="#62a0ea"/>

  <!-- Code -->
  <style name="def:inline-code" background="#3d3846" foreground="#CCC"/>
  <style name="def:preformatted-section" background="#3d3846" foreground="#CCC"/>

  <!-- Line-break -->
  <style name="def:note" foreground="#CCC"/>

  <!-- Backslash Escaping -->
  <style name="def:special-char" foreground="#888"/>

  <!-- Headers -->
  <style name="def:heading" foreground="#f6f5f4" bold="true"/>
</style-scheme>
