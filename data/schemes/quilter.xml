<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="quilter" _name="Quilter" version="1.0">
  <author>Lains</author>
  <_description>Emphasis on focus.</_description>

  <style name="text"            foreground="#232629" background="#FCFCFC"/>
  <style name="cursor"          foreground="#3daee9"/>
  <style name="current-line"    background="#eff0f1"/>
  <style name="selection"       foreground="#EAEAEA" background="#3daee9"/>

  <!-- Bold -->
  <style name="def:statement" bold="true"/>

  <!-- Italic -->
  <style name="def:doc-comment-element" foreground="#B7B6B7" italic="true"/>

  <!-- Links -->
  <style name="def:comment" foreground="#3daee9"/>
  <style name="def:underlined" foreground="#3daee9"/>

  <!-- Code -->
  <style name="def:identifier" foreground="#B7B6B7"/>

  <!-- Line-break -->
  <style name="def:note" foreground="#232629"/>

  <!-- Label -->
  <style name="def:preprocessor" foreground="#232629"/>

  <!-- Image marking in Links -->
  <style name="def:shebang" foreground="#3daee9"/>
  <style name="def:constant" foreground="#3daee9"/>

  <!-- Backslash Escaping -->
  <style name="def:special-char" foreground="#B7B6B7"/>

  <!-- Headers -->
  <style name="def:type" foreground="#232629" bold="true"/>
</style-scheme>
